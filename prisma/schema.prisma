generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id_user   Int        @id @default(autoincrement())
  username  String     @unique
  password  String
  role      Role
  mahasiswa Mahasiswa?
}

model Mahasiswa {
  id_mahasiswa   Int    @id @default(autoincrement())
  nim            String @unique
  nama_mahasiswa String
  jenis_kelamin  String
  jurusan        String
  id_user        Int?   @unique
  user           User?  @relation(fields: [id_user], references: [id_user])
  krs            KRS[]
}

model Dosen {
  id            Int           @id @default(autoincrement())
  nidn          Int           @unique
  nama_dosen    String
  jenis_kelamin String
  alamat        String
  jadwal        Penjadwalan[]
}

model Matakuliah {
  id_matakuliah Int           @id @default(autoincrement())
  nama          String
  sks           Int
  id_dosen      Int
  jadwal        Penjadwalan[]
  krs           KRS[]
}

model Penjadwalan {
  id_jadwal     Int        @id @default(autoincrement())
  jadwal        String
  id_dosen      Int
  id_matakuliah Int
  dosen         Dosen      @relation(fields: [id_dosen], references: [id])
  matakuliah    Matakuliah @relation(fields: [id_matakuliah], references: [id_matakuliah])
  krs           KRS[]
}

model KRS {
  id_krs        Int         @id @default(autoincrement())
  id_mahasiswa  Int
  id_matakuliah Int
  id_jadwal     Int
  mahasiswa     Mahasiswa   @relation(fields: [id_mahasiswa], references: [id_mahasiswa])
  matakuliah    Matakuliah  @relation(fields: [id_matakuliah], references: [id_matakuliah])
  jadwal        Penjadwalan @relation(fields: [id_jadwal], references: [id_jadwal])
}

enum Role {
  ADMIN
  MAHASISWA
}
